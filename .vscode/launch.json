    "version": "0.2.0",
    "configurations": [
        {
            "type": "julia",
            "request": "launch",
            "name": "Debug active Julia check file",
            "program": "${workspaceFolder}/.vscode/DebugCheck.jl",
            "args": [ "${file}" ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}/.vscode",
            "env": {},
            "juliaEnv": "${command:activeJuliaEnvironment}",
            "presentation": {
                "hidden": false,
                "group": "checks",
                "order": 1
            },
        }
    ]
}
